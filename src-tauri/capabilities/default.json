{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:default",
    "fs:default",
    "fs:allow-appconfig-write-recursive",
    "fs:allow-appconfig-read-recursive",
    { "identifier": "fs:allow-mkdir", "allow": ["$APPDATA/**"] }
  ]
}
